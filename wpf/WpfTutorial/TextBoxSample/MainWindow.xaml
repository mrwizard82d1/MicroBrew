<Window x:Class="TextBoxSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TextBoxSample" Height="160" Width="280">
    <!-- I believe a `Grid` allows a single child to consume all available space, whereas a `StackPanel` would not. -->
    <Grid Margin="10">
        <!-- Setting the `AcceptsReturn` to `True` allows the control to include newline characters. -->
        <!-- Setting the `TextWrapping` to `True` allows the control to wrap text at the "end of line". -->
        <TextBox AcceptsReturn="True"
                 TextWrapping="Wrap"/>
    </Grid>
</Window>
