<Window x:Class="TextBoxSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TextBoxSample" Height="160" Width="280">
    <Grid Margin="10">
        <!-- This example extends the previous code adding two additional properties to the `TextBox`. -->
        <!-- The attached property, `SpellCheck.IsEnabled`, enables spell checking. -->
        <!-- The property, `Language`, enables spell checking for a specific language (US English). -->
        <!-- Other supported languages are French, German and Spanish. -->
        <TextBox AcceptsReturn="True"
                 TextWrapping="Wrap"
                 SpellCheck.IsEnabled="True"
                 Language="en-US"/>
    </Grid>
</Window>
