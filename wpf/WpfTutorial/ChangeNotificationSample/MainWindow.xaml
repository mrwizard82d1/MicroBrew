<Window x:Class="ChangeNotificationSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right"
                    Margin="10,0,0,0">
            <Button Name="BtnAddUser"
                    Click="BtnAddUser_OnClick">
                Add User
            </Button>
            <Button Name="BtnChangeUser"
                    Click="BtnChangeUser_OnClick"
                    Margin="0,5">
                Change User
            </Button>
            <Button Name="BtnDeleteUser"
                    Click="BtnDeleteUser_OnClick" >
                Delete User
            </Button>
        </StackPanel>
        <ListBox Name="LblUsers"
                 DisplayMemberPath="Name"/>
    </DockPanel>
</Window>
